{
  "manifest_version": 3,
  "name": "Frontend Monitor",
  "version": "1.0.0",
  "description": "Пассивный мониторинг веб-приложений",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "webNavigation",
    "webRequest",
    "tabs"
  ],
  "host_permissions": [
    "https://your-analytics-service.com/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "inject.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}