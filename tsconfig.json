{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["ES2020", "DOM"],
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "bundler",
		"declaration": false,
		"sourceMap": true,
		"types": ["chrome"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
